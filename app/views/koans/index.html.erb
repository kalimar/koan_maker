<h1>Listing koans</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Question</th>
      <th>Solution</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @koans.each do |koan| %>
      <tr>
        <td><%= koan.title %></td>
        <td><%= koan.question %></td>
        <td><%= link_to 'Show', koan %></td>
        <td><%= link_to 'Edit', edit_koan_path(koan) %></td>
        <td><%= link_to 'Destroy', koan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


